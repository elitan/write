{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Write",
  "version": "0.2.5",
  "identifier": "com.write.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Write",
        "width": 1100,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQyRUIwMjJEQkQxQTYxRkUKUldUK1lScTlMUUxyMHNodUhmbkFwRDNTbmNDMXVKeEx1MHYxYzh0c0UveXJSMEFxdEltK2R4ekcK",
      "endpoints": [
        "https://github.com/elitan/write/releases/latest/download/latest.json"
      ]
    }
  }
}
